{
  "extends": "@wroud/tsconfig/tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./lib/legacy-decorators/.tsbuildinfo",
    "rootDir": "src",
    "rootDirs": [
      "src"
    ],
    "outDir": "lib/legacy",
    "incremental": true,
    "composite": true,
    "types": [
      "reflect-metadata"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/inversify",
    "src/inversify7",
    "src/tsyringe"
  ],
  "references": [
    {
      "path": "../di"
    }
  ]
}
