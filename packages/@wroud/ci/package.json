{
  "name": "@wroud/ci",
  "description": "A small CLI for automating releases based on conventional commits. It bumps versions, updates your changelog and publishes GitHub releases.",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "yarn@4.9.1",
  "license": "MIT",
  "author": "Wroud",
  "homepage": "https://wroud.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wroud/foundation",
    "directory": "packages/@wroud/ci"
  },
  "bin": "./lib/cli.js",
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "lib",
    "!lib/**/*.d.ts.map",
    "!lib/**/*.test.js",
    "!lib/**/*.test.d.ts",
    "!lib/**/*.test.d.ts.map",
    "!lib/**/*.test.js.map",
    "!lib/tests",
    "!.tsbuildinfo"
  ],
  "scripts": {
    "ci:release": "ci release",
    "ci:git-tag": "ci git-tag",
    "ci:release-github": "ci release-github",
    "test": "tests-runner",
    "test:ci": "CI=true yarn run test",
    "build": "tsc -b",
    "watch:tsc": "tsc -b -w",
    "dev": "concurrently \"npm:watch:*\"",
    "clear": "rimraf ./lib"
  },
  "dependencies": {
    "@octokit/auth-action": "^5",
    "@octokit/rest": "^21",
    "@wroud/conventional-commits-bump": "workspace:*",
    "@wroud/conventional-commits-changelog": "workspace:*",
    "@wroud/conventional-commits-parser": "workspace:*",
    "@wroud/git": "workspace:*",
    "@wroud/github": "workspace:*",
    "execa": "^9",
    "semver": "^7",
    "tempy": "^3",
    "yargs": "^17"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20",
    "@types/node": "^20",
    "@types/semver": "^7",
    "@types/yargs": "^17",
    "@vitest/coverage-v8": "^2",
    "@wroud/tests-runner": "workspace:*",
    "@wroud/tsconfig": "workspace:*",
    "concurrently": "^9",
    "memfs": "^4",
    "rimraf": "^6",
    "typescript": "^5",
    "vitest": "^2"
  },
  "release": {
    "tagPrefix": "ci-v"
  },
  "keywords": [
    "ci",
    "github",
    "release",
    "git",
    "cli",
    "conventional-commits",
    "typescript",
    "javascript"
  ]
}
