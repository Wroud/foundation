{
  "name": "@wroud/di",
  "description": "A simple and lightweight dependency injection library for JavaScript and TypeScript",
  "version": "0.16.1",
  "type": "module",
  "packageManager": "yarn@4.9.1",
  "license": "MIT",
  "author": "Wroud",
  "homepage": "https://wroud.dev/packages/di/overview",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wroud/foundation",
    "directory": "packages/@wroud/di"
  },
  "sideEffects": [
    "./lib/module/ModuleRegistry.js"
  ],
  "module": "./lib/production.js",
  "exports": {
    ".": {
      "development": "./lib/development.js",
      "default": "./lib/production.js"
    },
    "./types": "./lib/types/index.js",
    "./*.js": "./lib/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "lib",
    "!lib/**/*.d.ts.map",
    "!lib/**/*.test.js",
    "!lib/**/*.test.d.ts",
    "!lib/**/*.test.d.ts.map",
    "!lib/**/*.test.js.map",
    "!lib/tests",
    "!.tsbuildinfo"
  ],
  "scripts": {
    "ci:release": "ci release --prefix di-v",
    "ci:git-tag": "ci git-tag --prefix di-v",
    "ci:release-github": "ci release-github --prefix di-v",
    "test": "tests-runner",
    "test:ci": "CI=true yarn run test",
    "build": "tsc -b",
    "watch:tsc": "tsc -b -w",
    "dev": "concurrently \"npm:watch:*\"",
    "clear": "rimraf ./lib"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@vitest/coverage-v8": "^3",
    "@wroud/ci": "workspace:^0",
    "@wroud/tests-runner": "workspace:*",
    "@wroud/tsconfig": "workspace:*",
    "concurrently": "^9",
    "rimraf": "^6",
    "tslib": "^2",
    "typescript": "^5",
    "vitest": "^3"
  },
  "keywords": [
    "dependency injection",
    "DI",
    "JavaScript",
    "TypeScript",
    "ES modules",
    "decorators",
    "service management",
    "inversion of control",
    "IoC",
    "singleton",
    "transient",
    "scoped",
    "wroud",
    "modern JS",
    "best practices",
    "esm"
  ]
}
