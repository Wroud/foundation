{
  "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs",

  "typescript.tsc.autoDetect": "off",
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.importModuleSpecifierEnding": "js",

  "editor.tabSize": 2,
  "editor.formatOnSave": true,

  "npm.autoDetect": "off",
  "npm.packageManager": "yarn",

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.test.tsx, ${capture}.test.ts, ${capture}.*.ts, ${capture}.d.ts",
    "*.d.ts": "${capture}.d.ts.map",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts, ${capture}.d.ts.map",
    "*.jsx": "${capture}.js, ${capture}.jsx.map",
    "*.tsx": "${capture}Loader.ts, ${capture}.ts, ${capture}.*.tsx, ${capture}.test.tsx, ${capture}.test.ts, ${capture}.module.css",
    ".eslintrc.*": ".eslintrc.*, .eslintignore",
    "tsconfig.json": "tsconfig.*.json, *.tsbuildinfo",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  },

  "files.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true,
    "**/node_modules": true,
    "**/coverage": true,
    "**/lib": true,
    "**/components.d.ts": true
  },

  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  }
}
