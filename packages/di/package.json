{
  "name": "@wroud/di",
  "description": "A simple and lightweight dependency injection library for JavaScript and TypeScript",
  "version": "0.1.0",
  "packageManager": "yarn@4.2.2",
  "type": "module",
  "license": "MIT",
  "author": "Wroud",
  "homepage": "https://wroud.dev/packages/di/overview",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wroud/foundation",
    "directory": "packages/di"
  },
  "sideEffects": [],
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./*": "./lib/*",
    "./package.json": "./package.json",
    "./src": "./src/index.ts",
    "./src/*": "./src/*"
  },
  "files": [
    "LICENSE",
    "package.json",
    "README.md",
    "lib",
    "!lib/**/*.test.js",
    "!lib/**/*.test.d.ts",
    "!lib/**/*.test.d.ts.map",
    "!lib/**/*.test.js.map",
    "!lib/tests",
    "!.tsbuildinfo"
  ],
  "scripts": {
    "test": "tests-runner",
    "test:ci": "CI=true yarn run test",
    "build": "tsc -b",
    "watch:tsc": "tsc -b -w",
    "dev": "concurrently \"npm:watch:*\"",
    "clear": "rimraf ./lib"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@vitest/coverage-v8": "^1",
    "@wroud/tests-runner": "workspace:^",
    "@wroud/tsconfig": "workspace:^",
    "concurrently": "^8",
    "rimraf": "^5",
    "tslib": "^2",
    "typescript": "^5",
    "vitest": "^1"
  },
  "keywords": [
    "dependency injection",
    "DI",
    "JavaScript",
    "TypeScript",
    "ES modules",
    "decorators",
    "service management",
    "inversion of control",
    "IoC",
    "singleton",
    "transient",
    "scoped",
    "wroud",
    "modern JS",
    "best practices"
  ]
}
