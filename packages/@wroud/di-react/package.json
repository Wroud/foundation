{
  "name": "@wroud/di-react",
  "description": "A simple and lightweight dependency injection library for React",
  "version": "0.4.0",
  "packageManager": "yarn@4.5.3",
  "type": "module",
  "license": "MIT",
  "author": "Wroud",
  "homepage": "https://wroud.dev/packages/di/integrations/react/overview",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wroud/foundation",
    "directory": "packages/@wroud/di-react"
  },
  "sideEffects": [],
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./*.js": "./lib/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "lib",
    "!lib/**/*.d.ts.map",
    "!lib/**/*.test.js",
    "!lib/**/*.test.d.ts",
    "!lib/**/*.test.d.ts.map",
    "!lib/**/*.test.js.map",
    "!lib/tests",
    "!.tsbuildinfo"
  ],
  "scripts": {
    "ci:release": "yarn ci release --prefix di-react-v",
    "ci:git-tag": "yarn ci git-tag --prefix di-react-v",
    "ci:release-github": "yarn ci release-github --prefix di-react-v",
    "test": "tests-runner",
    "test:ci": "CI=true yarn run test",
    "build": "tsc -b",
    "watch:tsc": "tsc -b -w",
    "dev": "concurrently \"npm:watch:*\"",
    "clear": "rimraf ./lib"
  },
  "dependencies": {
    "@wroud/di": "workspace:^0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10",
    "@testing-library/jest-dom": "^6",
    "@testing-library/react": "^16",
    "@testing-library/user-event": "^14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/coverage-v8": "^2",
    "@wroud/ci": "workspace:*",
    "@wroud/tests-runner": "workspace:*",
    "@wroud/tsconfig": "workspace:*",
    "concurrently": "^9",
    "happy-dom": "^15",
    "react": "^18",
    "react-dom": "^18",
    "rimraf": "^6",
    "tslib": "^2",
    "typescript": "^5",
    "vitest": "^2"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "react"
  ]
}
