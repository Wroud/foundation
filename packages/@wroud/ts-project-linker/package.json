{
  "name": "@wroud/ts-project-linker",
  "description": "A CLI tool that synchronizes TypeScript project references with package dependencies, supporting sub configurations like tsconfig.*.json.",
  "version": "0.2.0",
  "packageManager": "yarn@4.6.0",
  "license": "MIT",
  "author": "Wroud",
  "homepage": "https://wroud.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wroud/foundation",
    "directory": "packages/@wroud/ts-project-linker"
  },
  "type": "module",
  "sideEffects": [],
  "bin": {
    "ts-link": "./lib/cli.js",
    "ts-project-linker": "./lib/cli.js"
  },
  "module": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./*.js": "./lib/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "lib",
    "!lib/**/*.d.ts.map",
    "!lib/**/*.test.js",
    "!lib/**/*.test.d.ts",
    "!lib/**/*.test.d.ts.map",
    "!lib/**/*.test.js.map",
    "!lib/tests",
    "!.tsbuildinfo"
  ],
  "scripts": {
    "ci:release": "ci release --prefix ts-link-v",
    "ci:git-tag": "ci git-tag --prefix ts-link-v",
    "ci:release-github": "ci release-github --prefix ts-link-v",
    "test": "tests-runner",
    "test:ci": "CI=true yarn run test",
    "build": "tsc -b",
    "watch:tsc": "tsc -b -w",
    "dev": "concurrently \"npm:watch:*\"",
    "clear": "rimraf ./lib"
  },
  "dependencies": {
    "comment-json": "^4",
    "execa": "^9",
    "fast-glob": "^3",
    "globby": "^14",
    "picocolors": "^1",
    "yargs": "^17"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20",
    "@types/node": "^20",
    "@types/yargs": "^17",
    "@vitest/coverage-v8": "^2",
    "@wroud/ci": "workspace:*",
    "@wroud/tests-runner": "workspace:*",
    "@wroud/tsconfig": "workspace:*",
    "concurrently": "^9",
    "rimraf": "^6",
    "typescript": "^5",
    "vitest": "^2"
  },
  "keywords": [
    "typescript",
    "project references",
    "dependencies",
    "cli",
    "cli tool",
    "tool",
    "tsconfig",
    "monorepo",
    "typescript linker",
    "typescript project references",
    "sub configs",
    "package dependencies"
  ]
}
