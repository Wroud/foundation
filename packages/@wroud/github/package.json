{
  "name": "@wroud/github",
  "description": "A lightweight GitHub integration library for working with git history, co-authors, issues, and commit links. Supports extracting GitHub metadata, generating GitHub URLs, and managing commit trailers in TypeScript.",
  "version": "0.1.3",
  "type": "module",
  "packageManager": "yarn@4.9.1",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "package.json",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "lib",
    "!lib/**/*.d.ts.map",
    "!lib/**/*.test.js",
    "!lib/**/*.test.d.ts",
    "!lib/**/*.test.d.ts.map",
    "!lib/**/*.test.js.map",
    "!lib/tests",
    "!.tsbuildinfo"
  ],
  "scripts": {
    "ci:release": "ci release --prefix github-v",
    "ci:git-tag": "ci git-tag --prefix github-v",
    "ci:release-github": "ci release-github --prefix github-v",
    "test": "tests-runner",
    "test:ci": "CI=true yarn run test",
    "build": "tsc -b",
    "watch:tsc": "tsc -b -w",
    "dev": "concurrently \"npm:watch:*\"",
    "clear": "rimraf ./lib"
  },
  "dependencies": {
    "@wroud/git": "workspace:^0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20",
    "@types/node": "^20",
    "@vitest/coverage-v8": "^2",
    "@wroud/ci": "workspace:*",
    "@wroud/tests-runner": "workspace:*",
    "@wroud/tsconfig": "workspace:*",
    "concurrently": "^9",
    "rimraf": "^6",
    "typescript": "^5",
    "vitest": "^2"
  },
  "keywords": [
    "GitHub",
    "git",
    "commit",
    "issues",
    "co-authors",
    "links",
    "GitHub integration",
    "git history",
    "git metadata",
    "TypeScript",
    "commit links",
    "issue tracking",
    "GitHub trailers"
  ]
}
