{
  "name": "@wroud/di",
  "description": "A simple and lightweight dependency injection library for JavaScript and TypeScript",
  "version": "0.0.12",
  "packageManager": "yarn@4.2.2",
  "type": "module",
  "license": "MIT",
  "author": "Wroud",
  "homepage": "https://wroud.dev/packages/di/overview",
  "repository": {
    "type": "git",
    "url": "https://github.com/Wroud/foundation",
    "directory": "packages/di"
  },
  "sideEffects": [],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*",
    "./package.json": "./package.json",
    "./src": "./src/index.ts",
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "!dist/**/*.test.js",
    "!dist/**/*.test.d.ts",
    "!dist/**/*.test.d.ts.map",
    "!dist/**/*.test.js.map",
    "!.tsbuildinfo"
  ],
  "scripts": {
    "build": "tsc -b",
    "clear": "rimraf ./dist",
    "watch:tsc": "tsc -b -w",
    "dev": "concurrently \"npm:watch:*\""
  },
  "devDependencies": {
    "@jest/globals": "^29",
    "@types/node": "^20",
    "@wroud/tsconfig": "workspace:^",
    "concurrently": "^8",
    "rimraf": "^5",
    "tslib": "^2",
    "typescript": "^5"
  },
  "keywords": [
    "dependency injection",
    "DI",
    "JavaScript",
    "TypeScript",
    "ES modules",
    "decorators",
    "service management",
    "inversion of control",
    "IoC",
    "singleton",
    "transient",
    "scoped",
    "wroud",
    "modern JS",
    "best practices"
  ]
}
